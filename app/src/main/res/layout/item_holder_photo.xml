<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="150dp"
    style="@style/GridTestCardView"
>

  <LinearLayout
      android:orientation="vertical"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="@dimen/default_margin">

    <me.relex.photodraweeview.PhotoDraweeView
        android:id="@+id/drawee_photo_thumbnail"
        android:layout_gravity="center_horizontal"
        android:layout_width="@dimen/grid_thumbnail_width"
        android:layout_height="@dimen/grid_thumbnail_width"
        fresco:placeholderImage="@drawable/ic_image_black_48dp"
        fresco:placeholderImageScaleType="centerInside"/>

    <TextView
        android:id="@+id/text_view_photo_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/default_margin"
    />

  </LinearLayout>

</android.support.v7.widget.CardView>